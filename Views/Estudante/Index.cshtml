@model List<MvcRazorViews.ViewModels.EstudanteViewModel>

@{
    ViewData["Title"] = "Lista de Estudantes";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Estudantes</h1>
    @if(Model.Count == 0)
    {
        <p>Não há nenhum estudante cadastrado.</p>
        <a href="#">Cadastre um estudante</a>
    }
    else
    {
        <p>A quantidade de estudantes cadastrados é: @Model.Count</p>
        <hr>

        @foreach(var estudante in Model)
        {
            <a href="/Estudante/Show/@estudante.Id">
                <h3>@estudante.Nome</h3>
            </a>
            <p>@estudante.Endereco</p>
            @if (estudante.Ativo)
            {
                <a href="#">Iniciar Conversa</a>
            }
            <hr>
        }
    }
</body>
</html>